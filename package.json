{
  "name": "npm-build-tool",
  "version": "1.0.0",
  "description": "NPM Front End Development Build Tool",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm install && npm run -s -q dev",
    "dev": "mkdir -p dist && npm run -s -q build",
    "build": "npm-run-all -s build:* && npm run watch",
    "build:styles": "node-sass --source-map true -q -o dist/css/ source/styles/app.scss && npm run build:styles:postcss",
    "build:styles:postcss": "postcss -c postcss.json -r dist/css/*.css",
    "build:html": "pug source/templates/*.pug -o dist -P",
    "build:images": "imagemin source/images/* dist/img -p",
    "build:js": "mkdir -p dist/js && browserify -d source/javascript/app.js -t [babelify --presets [es2015] --sourceMaps inline] | exorcist dist/js/app.js.map  | uglifyjs > dist/js/app.js",
    "watch": "parallelshell 'npm run browserSync' 'npm run watch:html' 'npm run watch:styles' 'npm run watch:images' 'npm run watch:js'",
    "watch:html": "onchange 'source/templates/**/*.pug' -- npm run -s -q build:html",
    "watch:styles": "onchange 'source/styles/**/*.scss' -- npm run -s -q build:styles",
    "watch:images": "onchange 'source/images/**.*' -- npm run -s -q build:images",
    "watch:js": "watchify source/javascript/app.js -o 'exorcist dist/js/app.js.map > dist/js/app.js' -dv",
    "browserSync": "browser-sync start --server --serveStatic 'dist/' --files 'dist/**/*'"
  },
  "author": "Pepe Miyashiro",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.7",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.13.0",
    "browserify": "^13.0.1",
    "css-mqpacker": "^5.0.1",
    "cssnano": "^3.7.1",
    "eslint": "^3.0.1",
    "exorcist": "^0.4.0",
    "imagemin-cli": "^2.1.0",
    "node-sass": "^3.8.0",
    "npm-run-all": "^2.3.0",
    "onchange": "^2.5.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.2",
    "postcss-flexboxfixer": "0.0.5",
    "postcss-flexbugs-fixes": "^2.0.0",
    "postcss-unprefix": "^0.2.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.5.3",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  }
}
